<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/button_raise_volume_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_raise_volume" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button_play"/>
    <Button
            android:text="Prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_prev"
            tools:layout_editor_absoluteX="162dp" tools:layout_editor_absoluteY="135dp"/>
    <Button
            android:text="Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_play" app:layout_constraintStart_toEndOf="@+id/button_prev"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/button_next"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button_raise_volume"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_next"
            tools:layout_editor_absoluteX="261dp" tools:layout_editor_absoluteY="356dp"/>
    <Button
            android:text="V-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_lower_volume" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button_play"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button_up"/>
    <Button
            android:text="Up"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/button_up" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_ok" android:layout_marginTop="205dp"
            app:layout_constraintTop_toBottomOf="@+id/button_lower_volume"/>
    <Button
            android:text="Left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_left"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="313dp" app:layout_constraintTop_toBottomOf="@+id/button_prev"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <Button
            android:text="OK"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:id="@+id/button_ok" app:layout_constraintStart_toEndOf="@+id/button_left"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/button_right"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_down"/>
    <Button
            android:text="Right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_right" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button_next"/>
    <Button
            android:text="Down"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/button_down" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Switch
            android:text="enable control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="86dp"
            tools:layout_editor_absoluteX="261dp" android:id="@+id/switch1"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="395dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="6dp"
            tools:layout_editor_absoluteX="8dp"/>
    <EditText
            android:layout_width="149dp"
            android:layout_height="46dp"
            android:inputType="number"
            android:ems="10"
            tools:layout_editor_absoluteY="22dp" android:id="@+id/edit_port"
            tools:layout_editor_absoluteX="246dp" android:digits="0123456789" android:text="53210"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="10"
            tools:layout_editor_absoluteY="22dp" tools:layout_editor_absoluteX="16dp" android:id="@+id/edit_ip_address"
            android:digits="0123456789." android:text="192.168.43.201"/>
    <TextView
            android:text="connected to server"
            android:layout_width="217dp"
            android:layout_height="26dp" tools:layout_editor_absoluteY="85dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/textView"/>

</android.support.constraint.ConstraintLayout>