<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/button_raise_volume_name"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/button_raise_volume" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button_play"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/text_status"/>
    <Button
            android:text="@string/prev"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/button_prev"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toStartOf="@+id/button_play"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/button_play"/>
    <Button
            android:text="@string/play"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:id="@+id/button_play" app:layout_constraintStart_toEndOf="@+id/button_prev"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/button_next"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_raise_volume"
            app:layout_constraintHorizontal_bias="0.52" android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/button_lower_volume"/>
    <Button
            android:text="@string/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_next"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/button_play"
            app:layout_constraintTop_toTopOf="@+id/button_play"/>
    <Button
            android:text="@string/v"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:id="@+id/button_lower_volume" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button_play"
            android:layout_marginBottom="70dp" app:layout_constraintBottom_toTopOf="@+id/button_up"/>
    <Button
            android:text="@string/up"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/button_up" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_ok"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/button_lower_volume"/>
    <Button
            android:text="@string/left"
            android:layout_width="wrap_content"
            android:layout_height="48dp" android:id="@+id/button_left"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toStartOf="@+id/button_ok"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/button_ok"/>
    <Button
            android:text="@string/ok"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:id="@+id/button_ok" app:layout_constraintStart_toEndOf="@+id/button_left"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/button_right"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_down" app:layout_constraintHorizontal_bias="0.769"
            android:layout_marginBottom="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_up"/>
    <Button
            android:text="@string/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_right" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toEndOf="@+id/button_ok"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/button_ok"/>
    <Button
            android:text="@string/down"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/button_down" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="104dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_ok"/>
    <Switch
            android:text="@string/enable_control"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/switch1" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_port" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/text_status"
            android:layout_marginStart="29dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edit_port"
            android:digits="0123456789" android:text="53210" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/edit_ip_address"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/edit_ip_address"
            android:digits="0123456789." android:text="192.168.1.187" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/edit_port"
            android:layout_marginEnd="21dp" android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/connected_to_server"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:id="@+id/text_status" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_ip_address" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/switch1"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>